@page "/pokeapi/{pokemonId}"
@using Pokedex.Components.Models
@using Pokedex.Components.Util
@inject PokeClient client

<div class="container my-5">
    @if (poke != null)
    {
        <!-- Main Image and Artwork Section -->
        <div class="row mb-6">
            <div class="col-md-6 text-center">
                <img src="@poke.sprites.other.dream_world.front_default" alt="@poke.name" class="pokemon-main-img">
            </div>
            <div class="col-md-6">
                <h2><strong>@poke.name.ToUpper()</strong></h2>
                <p><strong>Height:</strong> @poke.height m</p>
                <p><strong>Weight:</strong> @poke.weight kg</p>
                <p>
                    <strong>Abilities:</strong>
                    @foreach (var ability in poke.abilities)
                    {
                        <span>@ability.ability.name</span>

                        @(ability.is_hidden ? " (Hidden)" : "")

                        @((poke.abilities.Last() != ability) ? ", " : "")
                    }
                </p>
                <p>
                    <strong>Type:</strong>
                    @foreach (var type in poke.types)
                    {
                        <span class="badge" style="background-color: @TypeColor.GetColor(type.type.name); color: white;">@type.type.name.ToUpper()</span>
                    }
                </p>
            </div>
        </div>

        <!-- Base Stats Section -->
        <div class="resp-scroll">
            <table class="vitals-table">
                <tbody>
                    <tr>
                        <th>HP</th>
                        <td class="cell-num">106</td>
                        <td class="cell-barchart">
                            <div style="width:58.89%;" class="barchart-bar barchart-rank-4 "></div>
                        </td>
                        <td class="cell-num">322</td>
                        <td class="cell-num">416</td>
                    </tr>
                    <tr>
                        <th>Attack</th>
                        <td class="cell-num">110</td>
                        <td class="cell-barchart">
                            <div style="width:61.11%;" class="barchart-bar barchart-rank-4 "></div>
                        </td>
                        <td class="cell-num">202</td>
                        <td class="cell-num">350</td>
                    </tr>
                    <tr>
                        <th>Defense</th>
                        <td class="cell-num">90</td>
                        <td class="cell-barchart">
                            <div style="width:50.00%;" class="barchart-bar barchart-rank-4 "></div>
                        </td>
                        <td class="cell-num">166</td>
                        <td class="cell-num">306</td>
                    </tr>
                    <tr>
                        <th>Sp. Atk</th>
                        <td class="cell-num">154</td>
                        <td class="cell-barchart">
                            <div style="width:85.56%;" class="barchart-bar barchart-rank-6 "></div>
                        </td>
                        <td class="cell-num">281</td>
                        <td class="cell-num">447</td>
                    </tr>
                    <tr>
                        <th>Sp. Def</th>
                        <td class="cell-num">90</td>
                        <td class="cell-barchart">
                            <div style="width:50.00%;" class="barchart-bar barchart-rank-4 "></div>
                        </td>
                        <td class="cell-num">166</td>
                        <td class="cell-num">306</td>
                    </tr>
                    <tr>
                        <th>Speed</th>
                        <td class="cell-num">130</td>
                        <td class="cell-barchart">
                            <div style="width:72.22%;" class="barchart-bar barchart-rank-5 "></div>
                        </td>
                        <td class="cell-num">238</td>
                        <td class="cell-num">394</td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th>Total</th>
                        <td class="cell-num cell-total">680</td>
                        <th class="cell-barchart"></th>
                        <th>Min</th>
                        <th>Max</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading Pokémon...</p>
        </div>
    }
</div>

@code {
    [Parameter]
    public string pokemonId { get; set; } = "";

    Pokemon? poke;

    protected override async Task OnInitializedAsync()
    {
        poke = await client.GetPokemon(pokemonId);
    }
}
